<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue200"
    android:orientation="vertical"
    tools:context=".fragments.recipe.RecipeIngredientsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        android:text="@string/for_1_serving"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/default_text_size_lg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_barrier"
        android:layout_marginBottom="10dp"
        android:background="#ccc" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/recipe_ingredients_list"
        />

</LinearLayout>