<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipIconTint">@color/colorPrimaryDark</item>
		<item name="android:fontFamily">@font/pt_sans_regular</item>
		<item name="fontFamily">@font/pt_sans_regular</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

	<style name="Indicator">
		<item name="android:layout_marginLeft">3dp</item>
		<item name="android:layout_marginRight">3dp</item>
	</style>

    <style name="Indicator.More">
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginRight">9dp</item>
    </style>

    <style name="AppLogoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/balsamiq_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="ColoredButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@drawable/background_button</item>
    </style>

    <style name="RecipezeChips" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_background_state_list</item>
        <item name="chipIconTint">@color/colorPrimaryDark</item>
    </style>

</resources>
